{{define "echo"}}
<!DOCTYPE html>
<html lang="en">
<head>
  <title>fofugo echo</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
</head>
<body data-spy="scroll" data-target="#myScrollspy" data-offset="1">
{{$No := .No}}
{{$Context := .Context}}
{{range $echoBoard := .EchoBoards}}
  <form action="/echo" method="post" >
    <h1>Title</h1>
    <input type="number" name="id" value={{$echoBoard.Id}}>
    <div style="border: 4px dashed #bcbcbc;">
      {{$echoBoard.Title}}
      <p></p>
      <input type="text" name="title" size="100">
    </div>
    <h1>Content</h1>
    <div style="border: 4px dashed #222222;">
      {{$echoBoard.Content}}
      <p></p>
      <input type="text" name="content" size="1000">
    </div>
    <button type='submit'>
      submit
    </button>
    <hr>
  </form>
{{end}}
  <form action="/echo/context" method="post" >
    <h1>Context</h1>
    <p>{{$Context}}</p>
    <input type="number" name="no" value={{$No}}>
    <p></p>
    <input type="text" name="context" size="1000">
    <button type='submit'>
      submit
    </button>
    <hr>
  </form>
  <form action="/echo" method="post" >
    <h1>Title</h1>
    <input type="number" name="no" value={{$No}}>
    <p></p>
    <input type="text" name="title" size="100">
    <h1>Content</h1>
    <p></p>
    <input type="text" name="content" size="1000">
    <button type='submit'>
      submit
    </button>
    <hr>
  </form>
</body>
</html>
{{end}}
